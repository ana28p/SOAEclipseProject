				</xsd:complexType>
			</xsd:element>
		</xsd:schema>
  </wsdl:types>
  <wsdl:message name="PaymentFailedMessage">
    <wsdl:part name="fault" element="elements:PayForRideFault">
    </wsdl:part>
  </wsdl:message>
  <wsdl:message name="PayForRideRequestMessage">
    <wsdl:part name="inputParameters" element="elements:PayForRideRequest">
    </wsdl:part>
  </wsdl:message>
  <wsdl:message name="PayForRideResponseMessage">
    <wsdl:part name="outputParameters" element="elements:PayForRideResponse">
    </wsdl:part>
  </wsdl:message>
  <wsdl:portType name="InvoicingPortType">
    <wsdl:operation name="PayForRide">
      <wsdl:input message="ps:PayForRideRequestMessage">
    </wsdl:input>
      <wsdl:output message="ps:PayForRideResponseMessage">
    </wsdl:output>
      <wsdl:fault name="PaymentFailed" message="ps:PaymentFailedMessage">
    </wsdl:fault>
    </wsdl:operation>
  </wsdl:portType>
  <wsdl:binding name="InvoicingSOAPBinding" type="ps:InvoicingPortType">
    <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
    <wsdl:operation name="PayForRide">
      <soap:operation style="document"/>
      <wsdl:input>
        <soap:body use="literal"/>
      </wsdl:input>
      <wsdl:output>
        <soap:body use="literal"/>
      </wsdl:output>
      <wsdl:fault name="PaymentFailed">
        <soap:fault name="PaymentFailed"/>
      </wsdl:fault>
    </wsdl:operation>
  </wsdl:binding>
  <wsdl:service name="InvoicingOrderService">
    <wsdl:port name="InvoicingPort" binding="ps:InvoicingSOAPBinding">
      <soap:address location="http://localhost:8080/SOAProject/services/InvoicingOrderService"/>
    </wsdl:port>
  </wsdl:service>
