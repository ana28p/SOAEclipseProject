<?xml version="1.0" encoding="UTF-8"?>
<wsdl:definitions name="InvoicingOrderService"
  targetNamespace="http://order.com/InvoicingService" xmlns:ps="http://order.com/InvoicingService"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
  xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:types="http://order.com/DataTypes">
  <wsdl:types>
	  <xsd:schema>
	      <xsd:import namespace="http://order.com/DataTypes" schemaLocation="DataTypes.xsd" />
	  </xsd:schema>
  </wsdl:types>

  <wsdl:message name="PayForRideRequestMessage">
    <wsdl:part name="CurrentLocation" type="types:Location" />
    <wsdl:part name="EndLocation" type="types:Location" />
    <wsdl:part name="Price" type="xsd:double"/>
    <wsdl:part name="Driver" type="types:Driver"/>
  </wsdl:message>

  <wsdl:message name="PayForRideResponseMessage">
    <wsdl:part name="Status" type="xsd:string" />
  </wsdl:message>

  <wsdl:message name="PaymentFailedMessage">
    <wsdl:part name="Message" type="xsd:string" />
  </wsdl:message>

  <wsdl:portType name="InvoicingPortType">
    <wsdl:operation name="PayForRide">
      <wsdl:input message="ps:PayForRideRequestMessage" />
      <wsdl:output message="ps:PayForRideResponseMessage" />
      <wsdl:fault name="PaymentFailed" message="ps:PaymentFailedMessage"/>
    </wsdl:operation>
  </wsdl:portType>

  <wsdl:binding name="InvoicingSOAPBinding" type="ps:InvoicingPortType">
    <!-- leverage off soapbind:binding synchronous style -->
    <soap:binding style="document"
      transport="http://schemas.xmlsoap.org/soap/http" />
    <wsdl:operation name="PayForRide">
      <!-- again bind to SOAP -->
      <soap:operation
        style="document" />
      <!-- further specify that the messages in the wsdl:operation use SOAP -->
      <wsdl:input>
        <soap:body use="literal" />
      </wsdl:input>
      <wsdl:output>
        <soap:body use="literal" />
      </wsdl:output>
        <wsdl:fault name="PaymentFailed">
            <soap:fault name="PaymentFailed" />
        </wsdl:fault>
    </wsdl:operation>
  </wsdl:binding>

  <wsdl:service name="InvoicingOrderService">
    <wsdl:port name="InvoicingPort" binding="ps:InvoicingSOAPBinding">
      <!-- give the binding a network endpoint address or URI of service  -->
      <soap:address location="http://localhost:8080/SOAProject/services/InvoicingOrderService" />
    </wsdl:port>
  </wsdl:service>
</wsdl:definitions>
