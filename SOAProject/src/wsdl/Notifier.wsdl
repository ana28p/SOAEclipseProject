<?xml version="1.0" encoding="UTF-8"?>
<wsdl:definitions name="NotifierOrderService"
  targetNamespace="http://order.com/NotifierService" xmlns:ps="http://order.com/NotifierService"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
  xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:types="http://order.com/DataTypes">
  <wsdl:types>
	  <xsd:schema>
	      <xsd:import namespace="http://order.com/DataTypes" schemaLocation="DataTypes.xsd" />
	  </xsd:schema>
  </wsdl:types>

  <wsdl:message name="FindDriverRequestMessage">
    <wsdl:part name="StartLocation" type="types:Location" />
    <wsdl:part name="EndLocation" type="types:Location" />
    <wsdl:part name="Price" type="xsd:string" />
  </wsdl:message>

  <wsdl:message name="FindDriverResponseMessage">
    <wsdl:part name="Driver" type="types:Driver" />
  </wsdl:message>

  <wsdl:message name="NoDriverAvailableMessage">
    <wsdl:part name="Message" type="xsd:string" />
  </wsdl:message>

  <wsdl:portType name="NotifierPortType">
    <wsdl:operation name="FindDriver">
      <wsdl:input message="ps:FindDriverRequestMessage" />
      <wsdl:output message="ps:FindDriverResponseMessage" />
      <wsdl:fault name="NoDriverAvailable" message="ps:NoDriverAvailableMessage"/>
    </wsdl:operation>
  </wsdl:portType>

  <wsdl:binding name="NotifierSOAPBinding" type="ps:NotifierPortType">
    <!-- leverage off soapbind:binding synchronous style -->
    <soap:binding style="document"
      transport="http://schemas.xmlsoap.org/soap/http" />
    <wsdl:operation name="FindDriver">
      <!-- again bind to SOAP -->
      <soap:operation
        style="document" />
      <!-- further specify that the messages in the wsdl:operation use SOAP -->
      <wsdl:input>
        <soap:body use="literal" />
      </wsdl:input>
      <wsdl:output>
        <soap:body use="literal" />
      </wsdl:output>
        <wsdl:fault name="NoDriverAvailable">
            <soap:fault name="NoDriverAvailable" />
        </wsdl:fault>
    </wsdl:operation>
  </wsdl:binding>

  <wsdl:service name="NotifierOrderService">
    <wsdl:port name="FindDriverPort" binding="ps:NotifierSOAPBinding">
      <!-- give the binding a network endpoint address or URI of service  -->
      <soap:address location="http://localhost:8080/SOAProject/services/NotifierOrderService" />
    </wsdl:port>
  </wsdl:service>
</wsdl:definitions>
