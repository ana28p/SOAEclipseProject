<?xml version="1.0" encoding="UTF-8"?>
<wsdl:definitions name="FeedbackOrderService"
  targetNamespace="http://order.com/FeedbackService" xmlns:ps="http://order.com/FeedbackService"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
  xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:types="http://order.com/DataTypes">
  <wsdl:types>
	  <xsd:schema>
	      <xsd:import namespace="http://order.com/DataTypes" schemaLocation="DataTypes.xsd" />
	  </xsd:schema>
  </wsdl:types>

  <wsdl:message name="RateDriverRequestMessage">
    <wsdl:part name="Driver" type="types:Driver" />
    <wsdl:part name="Rating" type="xsd:double" />
  </wsdl:message>

  <wsdl:message name="RateDriverResponseMessage">
    <wsdl:part name="Distance" type="xsd:double" />
  </wsdl:message>

  <wsdl:message name="DriverNotFoundMessage">
    <wsdl:part name="Message" type="xsd:string" />
  </wsdl:message>

  <wsdl:portType name="FeedbackPortType">
    <wsdl:operation name="RateDriver">
      <wsdl:input message="ps:RateDriverRequestMessage" />
      <wsdl:output message="ps:RateDriverResponseMessage" />
      <wsdl:fault name="DriverNotFound" message="ps:DriverNotFoundMessage"/>
    </wsdl:operation>
  </wsdl:portType>

  <wsdl:binding name="FeedbackSOAPBinding" type="ps:FeedbackPortType">
    <!-- leverage off soapbind:binding synchronous style -->
    <soap:binding style="document"
      transport="http://schemas.xmlsoap.org/soap/http" />
    <wsdl:operation name="RateDriver">
      <!-- again bind to SOAP -->
      <soap:operation
        style="document" />
      <!-- further specify that the messages in the wsdl:operation use SOAP -->
      <wsdl:input>
        <soap:body use="literal" />
      </wsdl:input>
      <wsdl:output>
        <soap:body use="literal" />
      </wsdl:output>
        <wsdl:fault name="DriverNotFound">
            <soap:fault name="DriverNotFound" />
        </wsdl:fault>
    </wsdl:operation>
  </wsdl:binding>

  <wsdl:service name="FeedbackOrderService">
    <wsdl:port name="RateDriverPort" binding="ps:FeedbackSOAPBinding">
      <!-- give the binding a network endpoint address or URI of service  -->
      <soap:address location="http://localhost:8080/SOAProject/services/FeedbackOrderService" />
    </wsdl:port>
  </wsdl:service>
</wsdl:definitions>
