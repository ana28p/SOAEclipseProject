<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema	targetNamespace="http://order.com/DataTypes"
			xmlns:dt="http://order.com/DataTypes"
 			xmlns:xsd="http://www.w3.org/2001/XMLSchema">

	<xsd:complexType name="Person">
		<xsd:all>
			<xsd:element name="Id" type="xsd:int" />
			<xsd:element name="Name" type="xsd:string" />
			<xsd:element name="Age" type="xsd:integer" />
		</xsd:all>
	</xsd:complexType>
	
	<xsd:complexType name="Customer">
		<xsd:complexContent>
			<xsd:extension base="dt:Person">
				<xsd:all>
					<xsd:element name="CardNumer" type="xsd:string" />
				</xsd:all>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>
	
	<xsd:complexType name="Driver">
		<xsd:complexContent>
			<xsd:extension base="dt:Person">
				<xsd:all>
					<xsd:element name="CarNumber" type="xsd:string" />
				</xsd:all>
			</xsd:extension>
		</xsd:complexContent>
	</xsd:complexType>

	<xsd:complexType name="Location">
		<xsd:all>
			<xsd:element name="Longitude" type="xsd:double" />
			<xsd:element name="Lattitude" type="xsd:double" />
		</xsd:all>
	</xsd:complexType>
</xsd:schema>